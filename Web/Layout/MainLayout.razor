@inherits LayoutComponentBase

<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />
<MudLayout>
    <MudDrawer @bind-Open="@_open" Anchor="Anchor.Left" Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenuLeft />
    </MudDrawer>
    <MudDrawer Anchor="Anchor.Right" Elevation="2" Variant="@DrawerVariant.Mini">
        <NavMenuRight />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" >
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _open = false;
}